<?xml version='1.0' encoding='UTF-8' standalone='yes'?>
<addon id="service.quartz.tvshelf" name="Quartz TVShelf Service" provider-name="queeup" version="0.0.6">
	<requires>
		<import addon="xbmc.addon" version="14.0.0"/>
		<import addon="xbmc.json" version="6.0.0"/>
		<import addon="xbmc.python" version="2.1.0"/>
		<import addon="script.module.simplejson" version="2.0.10"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="addon.py" />
	<extension point="xbmc.service" library="service.py" start="login" />
	<extension point="xbmc.addon.metadata">
    <summary lang="en">Quartz TVShelf Service</summary>
    <description lang="en">Provides first unwatched episode per TV show for the home shelf. Add-on is based on Library Data Provider and striped down for Quartz Skin.</description>
    <platform>all</platform>
    <license>WTFPL</license>
    <website></website>
    <forum></forum>
    <source>https://github.com/queeup/service.quartz.tvshelf</source>
    <email></email>
    <nofanart>true</nofanart>
   </extension>
</addon>
